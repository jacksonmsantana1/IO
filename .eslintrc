{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {
    "describe": true,
    "it": false
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
  },
  "rules": {
	"prefer-template": 0,
    "padded-blocks": 0,
    "spaced-comment": 0,
	"no-unused-expressions": 0,
	"space-before-function-paren": 0,
    "one-var": 0,
    "new-cap": [1, {
      "capIsNew": false
    }]
  }
}
